@model IEnumerable<In_Out.Models.Item>

    <div class="container-p3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Borrowed Item List</h2>
            </div>
            <div class="col-6 text-right">
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Create new item</a>
            </div>
        </div>
        <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width=100%">
            <thread>
                <tr>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Borrower
                    </th>
                    <th>
                        Lender
                    </th>
                </tr>
            </thread>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">@item.ItemName</td>
                        <td width="30%">@item.Borrower</td>
                        <td width="30%">@item.Lender</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }
    </div>